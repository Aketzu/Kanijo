<p>
<%
curdate= nil
@entries.each do |e| %>
<% if e.day != curdate
  curdate = e.day%>
   <h2><%=e.day%></h2>
 <% end %>
 <span id='log-<%=e.id%>'>
   <%= render 'log_entries/row', object: e %>
 </span>
<% end %>
</p>


<%
def tlurl(day)
  "https://www.google.fi/maps/timeline/kml?authuser=0&pb=!1m8!1m3!1i%u!2i%u!3i%u!2m3!1i%u!2i%u!3i%u" % [day.year, day.month-1, day.day, day.year, day.month-1, day.day]
end

%>

<%= form_with(model: @log, local: true) do |form| %>
  <%=form.text_field :description, size: 50, placeholder: 'Where have you been, how many close contacts' %>
  &nbsp;
  <%=image_tag 'calendar.png', height: 30%> 
  <%=form.date_field :day, size: 8 %>
  &nbsp;
  <%=image_tag 'clock.png', height: 30%> 
  <%=form.time_field :time, size: 4 %>
  <%=form.submit 'Save' %>
<% end %>

<br /><br />
<%= form_with(model: @google, local: true, id: 'gupload') do |form| %>
  <table>
    <tr><td>
        <center>
  <%=image_tag 'dl.png', height: 120, style: 'margin-top: 50px' %> <br />
        </center>
  <span style="font-family: 'Nunito Sans', sans-serif;
  font-size: 21px;">
  Download history<br />
  </span>
  <%=link_to 'Today', tlurl(Date.today) %> <br />
  <%=link_to '1 day ago', tlurl(Date.today - 1) %> <br />
  <%=link_to '2 days ago', tlurl(Date.today - 2) %> <br />
  <%=link_to '3 days ago', tlurl(Date.today - 3) %> <br />
      </td>
      <td>
  <%=form.drag_and_drop_file_field :uploads do%>
    <%=image_tag 'upload.png', height: 120 %> <br />
    Drag here or click to select
  <% end %>
      </td><td>
  <center>
  <%=form.submit 'Save' %>
  </center>
      </td>
<% end %>
