<!DOCTYPE html>
<html>
  <head>
    <title>Pisarasi</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <%= stylesheet_link_tag '//ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/le-frog/jquery-ui.min.css' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet">
  </head>

  <body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Työkalu tartuntaketjujen jäljittämiseksi</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarsExampleDefault">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
              <%=link_to t(:about), 'https://pisarasi.fi/about/', class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%=link_to t(:faq), 'https://pisarasi.fi/ukk/', class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%=link_to 'Kanijo Oy', 'https://pisarasi.fi/kanijo/', class: 'nav-link' %>
            </li>
          </ul>

          <div class="colbox-r">
            <div class="colrow">
              <ul class="navbar-nav">
                <li class="nav-item <%= 'active' if current_page?(home_index_path) || current_page?('/') %>">
                  <%=link_to t(:home), home_index_path, class: 'nav-link' %>
                </li>
                <li class="nav-item <%= 'active' if current_page? edit_user_registration_path %>">
                  <%=link_to t(:profile), edit_user_registration_path, class: 'nav-link' %>
                </li>
                <li class="nav-item">
                  <%=link_to t(:logout), destroy_user_session_path, method: :delete, class: 'nav-link' %>
                </li>
              </ul>
            </div>
            <div class="colrow">
              <ul class="navbar-nav">
                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle" id="dropdown-lang" data-toggle="dropdown" href="#"><%=t :current_lang%></a>
                  <div class="dropdown-menu" aria-labelledby="dropdown-lang">
                    <a class="dropdown-item" href="?locale=en">English</a>
                    <a class="dropdown-item" href="?locale=fi">Suomi</a>
                    <a class="dropdown-item" href="?locale=se">Svenska</a>
                  </div>
                </li>
              </ul>
            </div>
          </div>

        </div>
      </div>
    </nav>

    <main role="main" class="container">
      <% if notice %>
        <p class="alert alert-info"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>
       <%= yield %>
    </main>
  </body>
</html>
