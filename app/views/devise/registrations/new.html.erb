<h2><%=t(:signup)%></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= f.label :password, t(:password) %>
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: t(:pass_min_length, count: @minimum_password_length) %>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation, t(:password_confirmation) %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="field form-group" style="padding-left: 1.25rem">
    <%= f.check_box :accept_tos, class: 'form-check-input' %>
    <%= f.label :accept_tos, raw(t(:accept_tos)), class: 'form-check-label' %>
  </div>

  <div class="actions">
    <%= f.submit t(:signup), class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
