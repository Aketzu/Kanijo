<h2>Places</h2>
<%resource.places.each do |p| %>
  <h4><%=p.name%> <%=fas(p.icon)%> <%=link_to fas('edit'), edit_place_path(p)%>
  <%=link_to fas('trash'), place_path(p), method: 'delete', title: t(:delete), data: { confirm: t(:delete_confirm) } %>
  </h4>
  <p>
  <%=p.address1%><br />
  <%=p.postalcode%> <%=p.city%><br />
  </p>
  <p>
  I share space usually with <%=p.num_people%> people.
  </p>
  <hr />
<% end %>

<h3><%=t :add_place_title %></h3>
<%= form_for(@place) do |f| %>
  <%= render 'places/form', place: @place %>
<% end %>

<hr />
<h2><%=t :edituser %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <%= f.label :name, t(:name) %>
    <%= f.text_field :name, autocomplete: "name", class: 'form-control' %>
  </div>

<% if f.object.provider == 'google' %>
  <div class="field form-group">
    <%= f.label :email, t(:email) %>
    <%= f.object.email %>
  </div>

<% else %>

  <div class="field form-group">
    <%= f.label :email, t(:email) %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

<% end %>

<% unless f.object.provider == 'google' %>

  <div class="field form-group">
    <%= f.label :password, t(:password) %>
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: t(:password_placeholder) %>
    <% if @minimum_password_length %>
      <em><%= t :pass_min_length, count: @minimum_password_length %></em>
    <% end %>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation, t(:password_confirmation) %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= f.label :current_password, t(:current_password) %>
    <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
  </div>

<% end %>

  <div class="field form-group">
    <%= f.label :phonenumber, t(:phone) %>
    <%= f.text_field :phonenumber, autocomplete: "tel", class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= f.label :home_municipality, t(:home_municipality) %>
    <%= f.text_field :home_municipality, class: 'form-control' %>
  </div>

  <div class="field form-group" style="padding-left: 1.25rem">
    <%= f.check_box :marketing_mails, class: 'form-check-input' %>
    <%= f.label :marketing_mails, t(:marketing_mails), class: 'form-check-label' %>
  </div>

  <div class="actions">
    <%= f.submit t(:update), class: 'btn btn-primary' %>
  </div>
<% end %>

<hr />

<h3><%=t :delete_account %></h3>

<p>
<%=t :delete_help%>
</p>

<p><%= button_to t(:delete_account_btn), registration_path(resource_name), data: { confirm: t(:confirm) }, method: :delete, class: 'btn btn-danger' %></p>
